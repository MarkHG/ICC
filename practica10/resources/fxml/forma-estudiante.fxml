<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<AnchorPane styleClass="background"
            prefWidth="360.0" prefHeight="175.0"
            fx:controller="mx.unam.ciencias.icc.ControladorFormaEstudiante"
            xmlns:fx="http://javafx.com/fxml">
  <children>
    <GridPane prefWidth="360.0" prefHeight="120.0"
              AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0"
              AnchorPane.topAnchor="10.0" AnchorPane.bottomAnchor="10.0" >
      <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" maxWidth="80.0" prefWidth="80.0" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" maxWidth="300.0" prefWidth="250.0" />
      </columnConstraints>
      <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER" />
      </rowConstraints>
      <children>
        <Label text="Nombre" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <Label text="# Cuenta" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <Label text="Promedio" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <Label text="Edad" GridPane.columnIndex="0" GridPane.rowIndex="3" />
        <TextField fx:id="nombre" GridPane.columnIndex="1" GridPane.rowIndex="0" />
        <TextField fx:id="cuenta" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        <TextField fx:id="promedio" GridPane.columnIndex="1" GridPane.rowIndex="2" />
        <TextField fx:id="edad" GridPane.columnIndex="1" GridPane.rowIndex="3" />
      </children>
    </GridPane>
    <ButtonBar AnchorPane.bottomAnchor="10.0" AnchorPane.rightAnchor="10.0">
      <buttons>
        <Button fx:id="botonAceptar"
                mnemonicParsing="false" onAction="#aceptar"
                text="Aceptar" prefWidth="120.0" />
        <Button mnemonicParsing="false" onAction="#cancelar"
                text="Cancelar" prefWidth="120.0" defaultButton="true" />
      </buttons>
    </ButtonBar>
  </children>
</AnchorPane>
